doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    if currentUser 
      a(href=currentUser.url)
        h1= currentUser.fullName
        
      a(href="/log-out") Log Out

    else 
      a(href="/log-in") Log In
      br
      a(href="/sign-up") Sign Up

    block content