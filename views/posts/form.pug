extends ../layout 

block content

    h3 Create post
    form(action="", method="post") 
        div
            label(for="title") Title: 
            input#title(name='title' value=(post !== undefined ? post.title : ''))
        br
        div
            textarea#content(name='content' placeholder='Share your message...' rows='6' style='width: 300px;')
                | #{post !== undefined ? post.content : ''}
        button(type="submit") #{title}

    if errors
        ul
            for error in errors
                li= error.msg

